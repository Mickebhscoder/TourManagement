{
  "env": {
    "browser": true,
    "node": true,
    "es2022": true
  },
  "plugins": ["compat"],
  "extends": ["next/core-web-vitals", "plugin:compat/recommended"],
  "rules": {
    "no-undef": "off", // Turn off 'no-undef' because globals are already defined
    "react-hooks/exhaustive-deps": "warn" // Keep warnings for hooks dependencies
  },
  "settings": {
    "polyfills": [
      "Promise",
      "fetch",
      "URLSearchParams",
      "performance",
      "URL",
      "Set",
      "Uint8Array"
    ]
  },
  "globals": {
    "Set": "readonly",
    "Promise": "readonly",
    "Uint8Array": "readonly"
  }
}

